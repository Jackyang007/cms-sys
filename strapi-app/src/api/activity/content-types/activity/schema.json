{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity",
    "description": "小程序活动配置"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "version": {
      "type": "string"
    },
    "endTime": {
      "type": "datetime",
      "required": true
    },

    "bannerImages": {
      "type": "json",
      "default": []
    },

    "highlights": {
      "type": "json",
      "default": []
    },

    "minDiscountCount": {
      "type": "integer",
      "default": 30,
      "min": 0
    },

    "currentOrderCount": {
      "type": "integer",
      "default": 0,
      "min": 0
    },

    "avatars": {
      "type": "component",
      "repeatable": true,
      "component": "activity.avatar-item"
    },

    "detailImages": {
      "type": "json",
      "default": []
    },

    "ctas": {
      "type": "component",
      "repeatable": false,
      "component": "activity.cta"
    },

    "merchant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchant.merchant",
      "inversedBy": "activities"
    },

    "isFeatured": {
      "type": "boolean",
      "default": false
    },

    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
