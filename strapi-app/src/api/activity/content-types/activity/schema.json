{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity",
    "description": "Mini program activity configuration."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "meta_title": {
      "type": "string",
      "required": true
    },
    "meta_version": {
      "type": "string",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "meta_title",
      "required": true
    },
    "startTime": {
      "type": "datetime",
      "required": false
    },
    "endTime": {
      "type": "datetime",
      "required": true
    },
    "activityStatus": {
      "type": "enumeration",
      "enum": [
        "draft",
        "online",
        "offline"
      ],
      "default": "online",
      "required": true
    },
    "sort": {
      "type": "integer",
      "required": false,
      "default": 100
    },
    "banner": {
      "type": "component",
      "repeatable": false,
      "component": "ui.banner",
      "required": false
    },
    "highlights": {
      "type": "json",
      "required": false
    },
    "minDiscountCount": {
      "type": "integer",
      "required": false,
      "default": 30
    },
    "currentOrderCount": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "avatars": {
      "type": "component",
      "repeatable": true,
      "component": "ui.avatar-item",
      "required": false
    },
    "detailImages": {
      "type": "component",
      "repeatable": true,
      "component": "ui.image-item",
      "required": false
    },
    "ctas": {
      "type": "component",
      "repeatable": false,
      "component": "ui.cta",
      "required": false
    },
    "merchant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchant.merchant",
      "inversedBy": "activities"
    }
  }
}
